    .then(response => response.json())
    .then(data => {
      const stars = data.stargazers_count;
      const formattedStars = new Intl.NumberFormat('en-US', { notation: "compact", compactDisplay: "short" }).format(stars);
      const el = document.getElementById('github-stars-count');
      if (el) el.textContent = formattedStars;
    })
    .catch(console.error);
</script>

